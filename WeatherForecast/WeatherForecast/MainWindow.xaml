        <Button Content="Update" Margin="596,49,144,364" Click="Button_Click"/>
        <Label x:Name="Forecast" Content="" HorizontalAlignment="Left" Height="29" Margin="64,105,0,0" VerticalAlignment="Top" Width="476"/>
