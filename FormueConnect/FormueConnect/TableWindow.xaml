<Window x:Class="FormueConnect.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormueConnect"
        mc:Ignorable="d"
        Title="Tables" Height="450" Width="800">
    <ScrollViewer>
    <StackPanel>
        <ListBox Name="lbTableNames" ItemsSource="{Binding}" DisplayMemberPath="Name" SelectionChanged="OpenTable" SelectionMode="Single"/>
    </StackPanel>
    </ScrollViewer>
</Window>
