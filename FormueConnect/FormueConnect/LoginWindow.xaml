<Window x:Class="FormueConnect.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormueConnect"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="Server" HorizontalAlignment="Center" Margin="0,50,0,0" TextWrapping="Wrap" Text="Server" VerticalAlignment="Top" Width="207"/>
        <TextBox x:Name="Database" HorizontalAlignment="Center" Margin="0,101,0,0" TextWrapping="Wrap" Text="Database" VerticalAlignment="Top" Width="207"/>
        <TextBox x:Name="Username" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="208" Margin="0,150,0,0"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,197,0,0" VerticalAlignment="Top" Click="LoginClick" Width="120"/>


    </Grid>
</Window>
